<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Home"
    android:background="@android:color/holo_red_light"
    tools:showIn="@layout/app_bar_home">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_corner"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <Button
            android:id="@+id/btnEmergency"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_x="110dp"
            android:layout_y="95dp"
            android:textColor="@color/btnRegister"
            android:layout_marginTop="50dp"
            android:background="@drawable/emergencybtn"
            android:textAlignment="center"
            android:textSize="36dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Click Here For Emergency"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="10dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/txt_rider_app"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:text="Emergency Health Service"
        android:textSize="12dp"
        android:textAlignment="center"
        android:textColor="@color/bottomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_above="@+id/txt_rider_app"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:background="@android:color/holo_red_light"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/btnVideo"
            android:background="@drawable/btn_register_background"
            android:textColor="@color/btnRegister"
            android:text="Emergency Videos"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="20dp"
            android:layout_width="150dp"
            android:layout_weight="1"
            android:textSize="15dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/btnProfile"
            android:background="@drawable/btn_register_background"
            android:textColor="@color/btnRegister"
            android:text="Profile"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="20dp"
            android:layout_width="150dp"
            android:layout_weight="1"
            android:textSize="15dp"
            android:layout_height="30dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</RelativeLayout>